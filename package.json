{
	"name": "exifcleaner",
	"productName": "ExifCleaner",
	"version": "3.3.1",
	"description": "Clean exif metadata from images, videos, and PDF documents",
	"license": "MIT",
	"repository": "github:szTheory/exifcleaner",
	"main": "src/main/index.js",
	"author": {
		"name": "szTheory",
		"email": "szTheory@users.noreply.github.com",
		"url": "https://exifcleaner.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"format": "yarn prettier --write 'src/**/*.ts'",
		"lint": "prettier --check 'src/**/*.ts'",
		"test": "yarn run lint",
		"start": "electron .",
		"pack": "yarn run compile && electron-builder --dir -c.compression=store -c.mac.identity=null",
		"packwin": "yarn run compile && electron-builder --windows",
		"packlinux": "yarn run compile && electron-builder --linux",
		"packmac": "yarn run compile && electron-builder --macos -c.mac.identity=null",
		"build": "yarn run compile && electron-builder --macos --linux --windows",
		"publish": "yarn run compile && electron-builder --macos --linux --windows -p onTagOrDraft",
		"release": "np",
		"dev": "electron-webpack dev",
		"compile": "electron-webpack"
	},
	"dependencies": {
		"electron-unhandled": "^3.0.0",
		"node-exiftool": "^2.3.0",
		"source-map-support": "^0.5.19",
		"spectre.css": "^0.5.8"
	},
	"devDependencies": {
		"@types/node": "^12",
		"electron": "^9",
		"electron-builder": "^22.2.0",
		"electron-webpack": "^2.7.4",
		"electron-webpack-ts": "^4.0.1",
		"node-sass": "^4.13.1",
		"prettier": "2.0.5",
		"sass-loader": "^8.0.0",
		"typescript": "^3.8.3",
		"webpack": "^4.41.2"
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"publish": {
			"provider": "github",
			"owner": "szTheory",
			"repo": "exifcleaner",
			"protocol": "https"
		},
		"appId": "com.exifcleaner",
		"mac": {
			"category": "public.app-category.graphics-and-images",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		},
		"extraResources": [
			{
				"from": ".resources/nix/bin",
				"to": "bin",
				"filter": [
					"**/*"
				]
			},
			{
				"from": ".resources/win/bin",
				"to": "bin",
				"filter": [
					"**/*"
				]
			}
		]
	}
}
